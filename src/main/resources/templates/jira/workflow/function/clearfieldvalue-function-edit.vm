<tr bgcolor="#ffffff">
    <td align="right" valign="top" bgcolor="#fffff0">
        <span class="label">$i18n.getText("clearfieldvalue-function-edit.field.label"):</span>
    </td>
    <td bgcolor="#ffffff" nowrap>
		<select id="field" name="field">
	    	#foreach ($val in $fieldList)
